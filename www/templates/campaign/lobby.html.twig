{% extends 'base.html.twig' %}

{% block title %}{{ campaign }}{% endblock %}

{% block body %}
    <div class="container">
        {{ form_start(form) }}
            {% for argument in campaign.arguments %}
                <div class="row">
                    <div class="col">
                        <label class="argument-wrapper">
                            <input type="radio" name="argument" value="{{ argument.id }}" />
                            <div class="argument">
                                {{ argument }}
                            </div>
                        </label>
                    </div>
                </div>
            {% endfor %}
            {{ form_row(form.firstname) }}
            {{ form_row(form.lastname) }}
            {{ form_row(form.email) }}
            {{ form_row(form.city) }}
            <div>
            
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}

{% block stylesheets %}
    <style>
        label.argument-wrapper {
            display: block;
            margin: 15px 0;
            background-color: lightgray;
            cursor: pointer;
        }
        
        label.argument-wrapper input {
            display: none;
        }

        label.argument-wrapper .argument {
            background-color: lightgray;
            padding: 15px;
        }
        
        label.argument-wrapper input:checked + .argument {
            background-color: gray;
        }
    </style>
{% endblock %}

{% block javascripts %}
{% endblock %}
